{
    "setname": "Cocktail Set-Name",
    "width":    1200,
    "height":   1800,
    "body": [
        {
            "type":             "rectangle",
            "desc":             "Frame",
            "color":            "||image_avg&$var_image",
            "x":                0,
            "y":                0,
            "width":            ">>w_%100",
            "height":           ">>h_%100"
        },
        {
            "type":             "rectangle",
            "desc":             "Background",
            "color":            "$var_background",
            "x":                "$var_frame_width",
            "y":                "$var_frame_width",
            "width":            ">>w_%100 - ( 2 * $var_frame_width )",
            "height":           ">>h_%100 - ( 2 * $var_frame_width )"
        },
        {
            "type":             "image",
            "desc":             "Cocktail Display Image",
            "id":               "image_cocktail",
            "x":                0,
            "y":                0,
            "width":            ">>w_%100",
            "height":           "auto",
            "image_path":       "$var_image",
            "filter":           "cut,gradient",
            "filter_config": [
                {
                    "side":         "top",
                    "length":       100
                },
                {
                    "direction":    "bottom",
                    "length":       700
                }
            ]
        },
        {
            "type":             "text",
            "id":               "text_cocktail_shadow",
            "desc":             "Cocktail Name Shadow",
            "x":                ">>w_%50",
            "y":                ">>h_%60 + 7",
            "align":            "center",
            "anchor":           "mm",
            "text":             "$var_cocktail_name",
            "color":            "#000000",
            "font_size":        120,
            "font":             "Stone Serif Semibold"
        },
        {
            "type":             "text",
            "desc":             "Cocktail Name",
            "y":                ">>h_%60",
            "color":            "#FFFFFF",
            "font_size":        125,
            "logic":            "COPY#EMPTY#text_cocktail_shadow"
        },
        {
            "type":             "text",
            "desc":             "Ingredients Count",
            "x":                ">>w_%12",
            "y":                ">>h_%70 + $cache_index * $var_ingridients_space",
            "align":            "right",
            "anchor":           "rb",
            "text":             "$var_ingredients#$cache_index#0",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold",
            "logic":            "FOR#$cache_index#0#LEN=$var_ingredients#1"
        },
        {
            "type":             "text",
            "desc":             "Ingredients Unit",
            "x":                ">>w_%12",
            "y":                ">>h_%70 + $cache_index * $var_ingridients_space",
            "align":            "left",
            "anchor":           "lb",
            "text":             "$var_ingredients#$cache_index#1",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold",
            "logic":            "FOR#$cache_index#0#LEN=$var_ingredients#1"
        },
        {
            "type":             "text",
            "desc":             "Ingredients Type",
            "x":                ">>w_%17",
            "y":                ">>h_%69 + $cache_index * $var_ingridients_space",
            "align":            "left",
            "anchor":           "lm",
            "text":             "$var_ingredients#$cache_index#2",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold",
            "logic":            "FOR#$cache_index#0#LEN=$var_ingredients#1"
        },
        {
            "type":             "text",
            "desc":             "Total Volume",
            "x":                ">>w_%95",
            "y":                ">>h_%91",
            "align":            "left",
            "anchor":           "rm",
            "text":             "$var_total_liter",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold"
        },
        {
            "type":             "text",
            "desc":             "Percentage VOL",
            "x":                ">>w_%95",
            "y":                ">>h_%95",
            "align":            "left",
            "anchor":           "rm",
            "text":             "$var_vol_percentage",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold"
        },
        {
            "type":             "text",
            "desc":             "Card ID",
            "x":                ">>w_%5",
            "y":                ">>h_%95",
            "align":            "left",
            "anchor":           "lm",
            "text":             "$var_id",
            "color":            "#FFFFFF",
            "font_size":        50,
            "font":             "Stone Serif Semibold"
        }
    ],
    "var_ingredients": [
        "4,cl,Gin",
        "2,cl,Zitronensaft",
        "3,cl,Maracujanaktar",
        "6,cl,Johannisbeernektar",
        "2,cl,Blue curacao Sirup"
    ],
    "var_background":       "#000000",
    "var_frame_width":      25,
    "var_image":            "",
    "var_url":              "Insert URL Here",
    "var_cocktail_name":    "",
    "var_id":               "Card ID",
    "var_ingridients_space":70,
    "var_vol_percentage":   "5,5%",
    "var_total_liter":      "170ml"
}
