{
    "setname": "Cocktail Set-Name",
    "width":    1200,
    "height":   1800,
    "body": [
        {
            "type":             "rectangle",
            "desc":             "Frame",
            "color":            "||image_avg&$var_image",
            "x":                0,
            "y":                0,
            "width":            ">>w_%100",
            "height":           ">>h_%100"
        },
        {
            "type":             "rectangle",
            "desc":             "Background",
            "color":            "$var_background",
            "x":                "$var_frame_width",
            "y":                "$var_frame_width",
            "width":            ">>w_%100 - ( 2 * $var_frame_width )",
            "height":           ">>h_%100 - ( 2 * $var_frame_width )"
        },
        {
            "type":             "image",
            "desc":             "Cocktail Display Image",
            "id":               "image_cocktail",
            "x":                0,
            "y":                0,
            "width":            ">>w_%100",
            "height":           "auto",
            "image_path":       "$var_image",
            "filter":           "cut,gradient",
            "filter_config": [
                {
                    "side":         "top",
                    "length":       100
                },
                {
                    "direction":    "bottom",
                    "length":       700
                }
            ]
        },
        {
            "type":             "text",
            "id":               "text_cocktail_shadow",
            "desc":             "Cocktail Name Shadow",
            "x":                ">>w_%50",
            "y":                ">>h_%60 + 7",
            "align":            "center",
            "anchor":           "mm",
            "text":             "$var_cocktail_name",
            "color":            "#000000",
            "font_size":        120,
            "font":             "Stone Serif Semibold"
        },
        {
            "type":             "text",
            "desc":             "Cocktail Name",
            "x":                ">>w_%50",
            "y":                ">>h_%60",
            "align":            "center",
            "anchor":           "mm",
            "text":             "$var_cocktail_name",
            "color":            "#FFFFFF",
            "font_size":        125,
            "font":             "Stone Serif Semibold"
        }
    ],
    "var_ingredients": [
        "4,cl,Gin",
        "2,cl,Zitronensaft",
        "3,cl,Maracujanaktar",
        "6,cl,Johannisbeernektar",
        "2,cl,Blue curacao Sirup"
    ],
    "var_background":       "#000000",
    "var_frame_width":      25,
    "var_image":            "",
    "var_url":              "Insert URL Here",
    "var_cocktail_name":    "",
    "var_id":               "Card ID"
}
